{
  "name": "aetherspace-green-stack-starter",
  "private": true,
  "license": "MIT",
  "author": "codinsonn <thorr@codinsonn.dev>",
  "repository": "https://github.com/codinsonn/aetherspace-green-stack-starter",
  "description": "A starter monorepo to get started with the GREEN stack for all your cross platform app development needs. Comes standard with GraphQL, React-Native(-Web), Expo, Electron & Next.js + A bunch of pre-written code to make these all work together smoothlessly.",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "devDependencies": {
    "@expo/webpack-config": "0.16.6",
    "@react-native-community/eslint-config": "^3.0.2",
    "@storybook/addon-controls": "^6.5.5",
    "@storybook/addon-docs": "^6.5.5",
    "@storybook/addon-essentials": "^6.5.5",
    "@storybook/builder-webpack5": "^6.5.5",
    "@storybook/manager-webpack5": "^6.5.5",
    "@storybook/mdx2-csf": "^0.0.3",
    "@storybook/react": "^6.5.5",
    "@typescript-eslint/eslint-plugin": "^5.23.0",
    "@typescript-eslint/parser": "^5.23.0",
    "chromatic": "^6.5.4",
    "eslint": "^8.15.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-no-secrets": "^0.8.9",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.5.0",
    "eslint-plugin-react-native": "^4.0.0",
    "eslint-plugin-react-native-a11y": "^3.2.1",
    "patch-package": "^6.4.7",
    "prettier": "^2.6.2",
    "prettier-eslint": "^14.0.3",
    "turbo": "^1.2.14",
    "webpack": "*"
  },
  "resolutions": {
    "@babel/core": "~7.17.12",
    "@babel/types": "~7.17.12",
    "@babel/plugin-transform-typescript": "~7.17.12"
  },
  "scripts": {
    "dev": "yarn dev-mobile & yarn storybook",
    "build": "yarn app-expo run create-next-manifest && yarn turbo run scripts#collect-assets build",
    "deploy": "vercel --prod --no-clipboard",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "collect-assets": "yarn turbo run scripts#collect-assets",
    "dev-web": "yarn turbo run app-next#dev",
    "dev-mobile": "yarn turbo run app-next#dev app-expo#start",
    "app-next": "yarn workspace app-next",
    "app-expo": "yarn workspace app-expo",
    "app-dev": "yarn turbo run app-next#dev",
    "app-start": "yarn turbo run app-expo#start",
    "app-pwa": "yarn turbo run app-expo#web",
    "app-ios": "yarn turbo run app-expo#ios",
    "app-android": "yarn turbo run app-expo#android",
    "app-web": "yarn app-dev",
    "app-uncache": "yarn turbo run app-expo#uncache",
    "doppler-setup": "doppler setup",
    "doppler-sync": "doppler secrets download --no-file --format env > apps/app-next/.env",
    "postinstall": "patch-package"
  }
}
