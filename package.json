{
  "name": "aetherspace-green-stack-starter",
  "private": true,
  "license": "MIT",
  "author": "codinsonn <thorr@codinsonn.dev>",
  "repository": "https://github.com/codinsonn/aetherspace-green-stack-starter",
  "description": "Starter monorepo to get started with the GREEN stack for all your cross platform app development needs. Comes standard with GraphQL, React-Native(-Web), Expo & Next.js + A bunch of optional helpers to make these all work together smoothlessly.",
  "workspaces": [
    "apps/*",
    "features/*",
    "packages/*"
  ],
  "devDependencies": {
    "@expo/webpack-config": "^0.17.2",
    "@react-native-community/eslint-config": "^3.0.2",
    "@storybook/addon-controls": "^6.5.5",
    "@storybook/addon-docs": "^6.5.5",
    "@storybook/addon-essentials": "^6.5.5",
    "@storybook/builder-webpack5": "^6.5.5",
    "@storybook/manager-webpack5": "^6.5.5",
    "@storybook/mdx2-csf": "^0.0.3",
    "@storybook/react": "^6.5.5",
    "@typescript-eslint/eslint-plugin": "^5.23.0",
    "@typescript-eslint/parser": "^5.23.0",
    "chromatic": "^6.5.4",
    "eslint": "^8.15.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-no-secrets": "^0.8.9",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.5.0",
    "eslint-plugin-react-native": "^4.0.0",
    "eslint-plugin-react-native-a11y": "^3.2.1",
    "expo-cli": "^6.0.5",
    "patch-package": "^6.4.7",
    "prettier": "^2.6.2",
    "prettier-eslint": "^14.0.3",
    "turbo": "^1.4.0",
    "webpack": "*"
  },
  "resolutions": {
    "typescript": "^4.3.5",
    "@babel/core": "^7.18.13",
    "@expo/config": "^6.0.26",
    "@types/react": "~18.0.0",
    "@expo/webpack-config": "^0.17.0"
  },
  "scripts": {
    "dev": "yarn dev:mobile",
    "dev:mobile": "yarn turbo run next-app#dev expo-app#start",
    "dev:docs": "yarn dev:mobile & yarn storybook",
    "web": "yarn turbo run next-app#dev",
    "ios": "yarn turbo run next-app#dev expo-app#ios",
    "android": "yarn turbo run next-app#dev expo-app#android",
    "storybook": "start-storybook -p 6006",
    "collect-assets": "yarn turbo run aetherspace#collect-assets",
    "collect-resolvers": "yarn turbo run aetherspace#collect-resolvers",
    "build": "yarn expo run create-next-manifest && yarn turbo run aetherspace#collect-assets build",
    "build-storybook": "build-storybook",
    "deploy:web:vercel": "vercel --prod --no-clipboard",
    "deploy:mobile:publish": "yarn workspace expo-app run publish",
    "deploy:mobile:auto": "yarn workspace expo-app run deploy:auto",
    "deploy:mobile:dev": "yarn workspace expo-app run deploy:dev",
    "deploy:mobile:stage": "yarn workspace expo-app run deploy:stage",
    "deploy:mobile:prod": "yarn workspace expo-app run deploy:prod",
    "postinstall": "patch-package"
  }
}
